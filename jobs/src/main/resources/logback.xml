<configuration>
  <timestamp key="STARTUP_TIMESTAMP" datePattern="yyyyMMdd_HHmmss" />
  <property name="CONSOLE_LEVEL" value="${CONSOLE_LOG_LEVEL:-OFF}" />

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/redsort-${STARTUP_TIMESTAMP}.log</file>
        <append>true</append> 
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${CONSOLE_LEVEL}</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="redsort" level="DEBUG" />
</configuration>